{% if block is defined %}
    <section class="w-full relative z-0">
        <div class="container mx-auto px-8 lg:px-0 flex flex-col items-center lg:flex-row {% if block.mediaAlignment == 'mediaRight' %}lg:flex-row-reverse lg:space-x-reverse{% endif %} space-x-0 lg:space-x-24 relative z-10">
            <div class="w-full lg:{{ block.mediaWidth }} mb-16 lg:mb-0">
                {% if block.image.one() | length %}
                    {% set optimizedImages = block.image.one().optimisedImage %}
                    <img class="lazyload w-full rounded-md"
                         src="{{ optimizedImages.placeholderBox() }}"
                         data-srcset="{{ optimizedImages.srcset() }}"
                         sizes="100vw" />
                {% endif %}
            </div>
            <div class="w-full lg:{% if block.mediaWidth == 'w-1/3' %}w-2/3{% elseif block.mediaWidth == 'w-1/2' %}w-1/2{% elseif block.mediaWidth == 'w-2/3' %}w-1/3{% endif %} mb-16 lg:mb-0">
                {{ block.richText }}
            </div>
        </div>
    </section>
{% endif %}