<section class="py-8 px-8 lg:px-0 lg:py-32 bg-white shadow-inner">
    <div class="container mx-auto">
        <a href="/" class="mb-8 inline-block">
            <img src="/dist/img/bethany-logo-dark.svg" alt="Bethany Christian Care">
        </a>
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {% for location in footerLocations.locations.all() %}
            <div class="w-full">
                <div class="{{ location.highlightColour }} h-sm mb-4"></div>
                <div class="p-4">
                    <h4 class="font-serif text-navy-500 mb-4 font-bold leading-none">
                        {{ location.locationTitle }}
                    </h4>
                    <div class="mb-4 text-lg">
                        {{ location.address | nl2br }}
                    </div>
                    <div class="flex flex-row items-center text-lg">
                        <span class="mr-4">{{ location.phoneIcon | raw }}</span> <a href="tel:{{ location.phone }}">{{ location.phone }}</a>
                    </div>
                    <div class="flex flex-row items-center text-lg">
                        <span class="mr-4">{{ location.emailIcon | raw }}</span> <a target="_blank" href="mailto:{{ location.email }}">{{ location.email }}</a>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
</section>

<footer class="mb-0 {% if craft.request.segments|length == 0 %}lg:mb-80{% endif%} bg-white">
    <div class="container mx-auto border-navy-100 border-t px-8 lg:px-0">
        <div class="flex flex-col lg:flex-row justify-between py-6">
            <div class="flex flex-col mb-4 lg:mb-0 lg:flex-row text-center lg:text-left w-full">
                <p class="mb-0 pr-0 lg:pr-4 mr-0 lg:mr-4 border-white lg:border-navy-100 lg:border-r text-base">Bethany Christian Care 2020</p>
                {{ craft.navigation.render('footerLeftNavigation', {
                    ulClass: 'nav-items flex py-4 justify-center lg:justify-start lg:py-0',
                    liClass: 'nav-item',
                    aClass: 'nav-link mr-4 text-base',
                    activeClass: 'nav-active',
                    ulAttributes: {
                        'data-attr': 'Some value',
                    },
                    liAttributes: {
                        'data-attr': 'Some value',
                    },
                    aAttributes: {
                        'data-attr': 'Some value',
                    },
                }) }}

                {{ craft.navigation.render('footerRightNavigation', {
                    ulClass: 'flex justify-center lg:justify-end ml-none lg:ml-auto items-end mb-0 text-center lg:text-left',
                    liClass: 'nav-item',
                    aClass: 'nav-link text-base',
                    activeClass: 'nav-active',
                    ulAttributes: {
                        'data-attr': 'Some value',
                    },
                    liAttributes: {
                        'data-attr': 'Some value',
                    },
                    aAttributes: {
                        'data-attr': 'Some value',
                    },
                }) }}
            </div>
        </div>
    </div>
</footer>

{% if craft.request.segments|length == 0 %}
    <section class="bg-navy-500 relative lg:fixed bottom-0 left-0 w-full py-16 xxl:py-0 text-center xxl:text-left xxl:h-270" style="z-index: -1;">
        <img class="hidden xxl:block absolute left-0 bottom-0" src="/dist/img/footer-left-curves.svg" alt="decorative image">

        <div class="w-full xxl:w-1/2 px-8 lg:px-0 mx-auto flex flex-col xxl:flex-row h-full items-center relative z-10">
            <img src="/dist/img/pink-logo-icon.svg" alt="decorative image">
            <div class="px-8 xxl:pl-16 w-full xxl:w-1/2">
                <h3 class="font-serif text-white text-2xl">Live an abundant life</h3>
                <p class="text-white">
                    Talk to one of our friendly staff
                    about your circumstances and how you can live abundantly
                    at Bethany Christian Care.
                </p>
            </div>
            <a href="#" class="inline-block text-center text-white py-4 px-8 rounded-full border border-white transition ease-in duration-200 hover:bg-navy-600 font-bold">
                Contact us
            </a>
        </div>

        <img class="h-full w-1/4 object-cover absolute right-0 top-0 hidden xxl:block" src="/dist/img/footer-image.jpg" alt="decorative image">
        <img class="h-full w-1/3 absolute right-0 top-0 hidden xxl:block" src="/dist/img/bcc-footer-mask.png" alt="decorative image">
    </section>
{% endif %}

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script>
    jQuery(document).ready(function($){
        $('.triggerSearch').on('click', function(){
            $('.searchForm').stop().slideToggle();
        });

        $('.closeSearch').on('click', function(){
            $('.searchForm').slideUp();
        })

        $('ul.hasDropdowns li').each(function(){
            var offset = ($(this).children('ul.submenu').outerWidth() - $(this).outerWidth()) / 2;
            $(this).children('ul.submenu').css({
                left: -offset
            });
        });
    });
</script>
<script src="https://kit.fontawesome.com/939156792f.js" crossorigin="anonymous"></script>
<script src="/dist/js/app.js"></script>
</body>
</html>