<div class="container mx-auto">
        <div class="flex flex-col lg:flex-row flex-wrap justify-center -mx-4">
            {% for card in block.iconCards.with(['iconCard:icon'])
                .all() %}
                {% if card.type == "heading" %}
                    <div class="w-full text-center">
                        <h2 class="font-serif">{{ card.heading }}</h2>
                    </div>
                {% endif %}

                {% if card.type == "iconCard" %}
                    <div class="w-full lg:{{ block.cardWidth }} px-4 mb-8">
                        <div class="h-full bg-navy-100 p-8 text-center border border-navy-100 hover:border-navy-500 rounded-md">
                            {% set icon = card.icon[0] ?? null %}
                            {% if icon %}
                                <img class="mx-auto mb-8 h-16" src="{{ icon.url }}" alt="{{ icon.title }}">
                            {% endif %}
                            <h5>{{ card.cardHeading }}</h5>
                            <p class="text-pink-500 text-sm">{{ card.cardSubHeading }}</p>
                            <p>{{ card.cardText }}</p>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
</div>