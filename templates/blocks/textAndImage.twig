{% if block is defined %}
    <section class="w-full relative z-0">
        <div class="container mx-auto lg:px-0 flex flex-col items-center lg:flex-row {% if block.mediaAlignment == 'mediaRight' %}lg:flex-row-reverse lg:space-x-reverse{% endif %} space-x-0 lg:space-x-8 relative z-10 {% if loop.last %}mb-0{% else %}mb-8{% endif %}">
            <div class="w-full relative lg:{{ block.mediaWidth }} {% if block.aspectRatio == 'landscape' %}pb-1/3{% endif %}{% if block.aspectRatio == 'square' %}pb-1/2{% endif %}{% if block.aspectRatio == 'portrait' %}pb-2/3{% endif %} mb-16 lg:mb-0">
                {% if block.image.one() | length %}
                    {% set optimizedImages = block.image.one().optimisedImage %}
                    <img class="absolute w-full h-full object-cover lazyload rounded-md"
                         src="{{ optimizedImages.placeholderBox() }}"
                         data-srcset="{{ optimizedImages.srcset() }}"
                         sizes="100vw" />
                {% endif %}
            </div>
            <div class="w-full lg:{% if block.mediaWidth == 'w-1/3' %}w-2/3{% elseif block.mediaWidth == 'w-1/2' %}w-1/2{% elseif block.mediaWidth == 'w-2/3' %}w-1/3{% endif %} mb-0">
                <div class="w-full {% if block.paddingAroundText %}lg:w-3/4 mx-auto{% endif %} richText">
                    {{ block.richText }}
                    {% set buttons = block.buttons.all() %}
                    {% for button in buttons %}
                        {% if button.internalLink | length %}
                            {% set link = button.internalLink.one().url %}
                        {% else %}
                            {% set link = button.buttonUrl %}
                        {% endif %}
                        <a class="{{ button.buttonStyle }} mr-4" href="{{ link }}">{{ button.buttonText }}</a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
{% endif %}