{
  "formatting": ["p", "h1", "h2", "h3", "h4", "h5", "h6"],
  "formattingAdd": {
      "lead": {
        "title": "Lead text",
        "api": "module.block.format",
        "args": {
          "tag": "p",
          "attr": {
            "class": "text-xl"
          },
          "type": "toggle"
        }
      },
      "remove-underline": {
        "title": "Remove underline",
        "api": "module.block.format",
        "args": {
          "tag": "a",
          "style": {
            "text-decoration": "none"
          },
          "type": "toggle"
        }
      },
      "small-pink": {
        "title": "Small pink",
        "api": "module.block.format",
        "args": {
          "tag": "p",
          "attr": {
            "class": "small-pink"
          },
          "type": "toggle"
        }
      },
      "small-grey": {
        "title": "Small grey",
        "api": "module.block.format",
        "args": {
          "tag": "p",
          "attr": {
            "class": "small-grey"
          },
          "type": "toggle"
        }
      },
      "font-serif": {
        "title": "Serif font",
        "api": "module.block.format",
        "args": {
          "tag": "h3",
          "attr": {
            "class": "font-serif"
          },
          "type": "toggle"
        }
      }
    },
  "buttons": ["formatting", "html", "bold", "italic", "unorderedlist", "orderedlist", "link", "image", "video"],
  "plugins": ["fullscreen", "video", "alignment"],
  "linkNewTab": true,
  "toolbarFixed": true
}
