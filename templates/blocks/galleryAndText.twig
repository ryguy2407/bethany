<div class="container mx-auto">
    <div class="flex flex-col lg:flex-row space-x-0 lg:space-x-16 items-center">
        <div class="w-full lg:w-1/2">
            <div id="galleryMain" class="w-full relative pb-2/3 overflow-hidden">
                {% set images = block.gallery.all()  %}
                {% for image in images %}
                    <img data-index="{{ loop.index }}"
                         class="absolute lazyload inset-0 w-full h-full object-cover rounded-md hidden"
                         src="{{ image.optimisedImage.placeholderBox() }}"
                         data-srcset="{{ image.optimisedImage.srcset() }}"
                         sizes="100vw"
                         alt="{{ image.title }}"
                    />
                {% endfor %}
            </div>
            <div class="w-3/4 mx-auto mt-4">
                <div id="galleryThumbs" class="flex flex-row justify-between space-x-4">
                    {% for image in images %}
                        <div data-index="{{ loop.index }}" class=" w-1/4 pb-1/12 relative overflow-hidden cursor-pointer">
                            <img class="absolute inset-0 w-full h-full object-cover rounded-md border border-white" src="{{ image.url }}" alt="{{ image.title }}">
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="w-full lg:w-1/2 relative richText">
            {{ block.richText }}
        </div>
    </div>
</div>