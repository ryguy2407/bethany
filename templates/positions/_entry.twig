{% extends 'layouts/base.twig' %}
    {% block main %}

        <section class="shadow-innerSmall w-full">

            <section class="relative z-0 pt-16 pb-16">
                <div class="container mx-auto text-center">
                    <h1 class="font-serif mb-0">{{ entry.title }}</h1>
                </div>
            </section>

            <section class="relative pb-32">
                <div class="container mx-auto">
                    <article class="w-full md:w-3/4 richText mx-auto px-8 lg:px-0">
                        {{ entry.positionDescription }}
                        <a target="_blank" class="px-8 lg:px-12 py-4 mr-4 btn-outline" style="text-decoration: none;" href="{{ entry.positionLink }}">{{ entry.positionLinkText }}</a>
                    </article>
                </div>
            </section>

        </section>


    {% endblock %}