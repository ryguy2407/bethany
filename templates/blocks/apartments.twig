<div class="container mx-auto flex flex-col lg:flex-row px-8 lg:px-0 space-x-0 lg:space-x-16 items-center">
    <div class="w-full lg:w-1/2">
        {{ block.richText }}
    </div>
    <div class="w-full lg:w-1/2">
        {% for apartment in block.apartments.all() %}
            <div class="bg-grey-200 flex flex-col lg:flex-row items-center mb-2 rounded-md">
                {% set image = apartment.image.one() %}
                {% if image | length %}
                    <div class="relative w-full lg:w-1/3 pb-1/2 lg:pb-1/4">
                        <img class="absolute lazyload inset-0 w-full h-full object-cover rounded-l-none rounded-t-md lg:rounded-t-none lg:rounded-l-md"
                             src="{{ image.optimisedImage.placeholderBox() }}"
                             data-srcset="{{ image.optimisedImage.srcset() }}"
                             sizes="100vw"
                             alt="{{ image.title }}">
                    </div>
                {% endif %}
                <div class="w-full lg:w-2/3 p-4">
                    <p class="font-bold text-2xl mb-0">{{ apartment.apartmentType }}</p>
                    <p class="text-sm mb-0">{{ apartment.availability }}</p>
                </div>
            </div>
        {% endfor %}
    </div>
</div>